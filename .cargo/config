[build]
#target = "i686-unknown-linux-gnu"
#target = "i686-pc-windows-msvc"
#target = "i686-pc-windows-gnu"

[env]
# Required for mlua to cross-compile properly.
CFLAGS = "-m32"
LDFLAGS = "-m32"
# Required for rust-hawktracer to compile when LDFLAGS has -m32.
CXXFLAGS = "-m32"

[target."i686-pc-windows-msvc"]
rustflags = ["-C", "target-feature=+crt-static"]